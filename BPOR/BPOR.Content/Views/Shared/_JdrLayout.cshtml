    <link rel="stylesheet" href="/resources/css/JDR/style.css" type="text/css" asp-append-version="true" />
    <link href="~/resources/css/govuk-frontend-5.11.1.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/_content/NIHR.GovUk.Extension.Jdr/css/jdr.css" />

    <link rel="icon" type="image/png" href="https://www.joindementiaresearch.nihr.ac.uk/images/core/JDR_favicon.ico" />

