    <script src="/resources/js/cookies.min.js" asp-append-version="true"></script>
</head>

<body class="noscript">
    <script>document.body.className += ' js-enabled' + ('noModule' in HTMLScriptElement.prototype ? ' govuk-frontend-supported' : '');</script>

    <a class="skip-link" href="#main-content">Skip to main content</a>

    <partial name="JDR/_Header" />

    <!-- govuk-width-container class removed -->
    <div role="main" id="main-content" class="">
        <partial name="JDR/_CookieConsentBanner" />
        @RenderBody()
    </div>


    <partial name="JDR/_Footer" />

<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
    @* splide usd for carosel, is this needed for JDR? no current carosel in JDR *@
<script src="https://cdn.jsdelivr.net/npm/@@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const splide = new Splide('.splide', { gap: '3em' });

            splide.on('ready', function () {
                const splideArrows = document.getElementsByClassName("splide__arrows")[0];

                const carouselControls = document.getElementsByClassName("carousel-controls");

                Array.prototype.forEach.call(carouselControls, function (el) {
                    el.appendChild(splideArrows);
                });
            });

            splide.mount();

            document.getElementsByTagName('body')[0].classList.remove("noscript");
        });</script>

    <script>

        const cookieDomain = @Json.Serialize(cookieDomain);

        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".btn-dark.cookie-btn").forEach(element => {
                element.addEventListener("keydown", event => {
                    if (event.which == 13) {
                        if (event.target.getAttribute("value").includes("accepted")) {
                            acceptCookie()
                        } else {
                            rejectCookie()
                        }
                    }
                });
            });

            if (Cookies.get("cookiesAccepted")) {
                closeCookieBanner();
                handleAcceptedCookies();
            }
        });


        function acceptCookie() {
            Cookies.set("jdrAdditionalCookies", "accepted-" + "20221221", { expires: 180, secure: true, domain: cookieDomain })
            confirmation("accepted")
            handleAcceptedCookies();
        }

        function handleAcceptedCookies() {
            if (Cookies.get("jdrAdditionalCookies").includes("accepted")) {
                @if (!string.IsNullOrWhiteSpace(gtm)) {
                  <text>tagManager(window, document, 'script', 'dataLayer', @Json.Serialize(gtm))</text>
                }
            }
        }

        function tagManager(w, d, s, l, i) {
            w[l] = w[l] || []; w[l].push({
                'gtm.start':
                    new Date().getTime(), event: 'gtm.js'
            }); var f = d.getElementsByTagName(s)[0],
                j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
                    'https://www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
        };

        function rejectCookie() {
            Cookies.set("jdrAdditionalCookies", "rejected-" + "20221221", { expires: 180, secure: true, domain: cookieDomain })
            Cookies.set("BPoRcookie", "BePartOfResearch")
            // remove existing cookies
            for (const cookie in Cookies.get()) {
                if (cookie.includes("_g") || cookie.includes("_hj") || cookie.includes("_fbp")) {
                    Cookies.remove(cookie, { path: '/', domain: '.nihr.ac.uk' })
                }
            }
            confirmation("rejected")
        }

        function confirmation(userDecision) {

            const template = document.getElementById("confirmationMessageTemplate");
            const clone = template.content.cloneNode(true);

            clone.querySelector(".user-decision").innerText = userDecision;

            const target = document.querySelector(".govuk-cookie-banner__message");
            target.replaceChildren(clone);


            clone.querySelectorAll(".btn-dark.cookie-btn").forEach(element => {
                element.addEventListener("keydown", event => {
                    if (event.which == 13) {
                        closeCookieBanner()
                    }
                });
            });

        }

        function closeCookieBanner() {
            document.querySelector("#cookies").classList.add("d-none")
        }


    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- GOV.UK JS -->
    <script type="module" src="~/resources/js/govuk-frontend-5.11.1.min.js"></script>
    <script type="module">import { initAll } from '/resources/js/govuk-frontend-5.11.1.min.js';
        initAll();</script>
</body>
</html>
