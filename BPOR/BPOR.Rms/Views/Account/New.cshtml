@{
    ViewData["Title"] = "Account created";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">
                Your NIHR account has been successfully created
            </h1>
            <div class="govuk-panel__body">
                You will now be able to sign in with the email address and password you specified, and submit your first study.
            </div>
        </div>
    </div>
</div>

<div class="govuk-grid-row govuk-!-margin-top-3">
    <div class="govuk-grid-column-one-half">
        <a asp-controller="Home" asp-action="Index" asp-route-sign-in="true" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
            Sign in
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
            </svg>
        </a>
    </div>
</div>