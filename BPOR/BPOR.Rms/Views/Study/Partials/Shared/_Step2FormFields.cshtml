@model BPOR.Rms.Models.Study.StudyFormViewModel


<div class="govuk-form-group @(Html.ViewData.ModelState["StudyName"]?.Errors.Count > 0 ? "govuk-form-group--error" : "")">
    <label asp-for="StudyName" class="govuk-label">
        @Html.DisplayNameFor(model => model.StudyName)
    </label>
    @if (Html.ViewData.ModelState["StudyName"]?.Errors.Count > 0)
    {
        <span class="govuk-error-message">
            <span class="govuk-visually-hidden">Error:</span>
            @Html.ValidationMessageFor(model => model.StudyName)
        </span>
    }
    <textarea asp-for="StudyName" class="govuk-textarea @(Html.ViewData.ModelState["StudyName"]?.Errors.Count > 0 ? "govuk-textarea--error" : "")" aria-describedby="@(Html.ViewData.ModelState["StudyName"]?.Errors.Count > 0 ? "study-name-error" : "")"></textarea>
</div>

@if (!Model.IsEditMode)
{
    <div class="govuk-form-group @(Html.ViewData.ModelState["IsRecruitingIdentifiableParticipants"]?.Errors.Count > 0 ? "govuk-form-group--error" : "")">
        <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                <h2 class="govuk-label">
                    @Html.DisplayNameFor(model => model.IsRecruitingIdentifiableParticipants)
                </h2>
            </legend>
            @if (Html.ViewData.ModelState["IsRecruitingIdentifiableParticipants"]?.Errors.Count > 0)
            {
                <span id="anonymous-enrolment-error" class="govuk-error-message">
                    <span class="govuk-visually-hidden">Error:</span>
                    @Html.ValidationMessageFor(model => model.IsRecruitingIdentifiableParticipants)
                </span>
            }
            <div class="govuk-radios" data-module="govuk-radios">
                <div class="govuk-radios__item">
                    <input asp-for="IsRecruitingIdentifiableParticipants" class="govuk-radios__input" id="IsRecruitingIdentifiableParticipants_Yes" value="true" type="radio">
                    <label class="govuk-label govuk-radios__label" for="IsRecruitingIdentifiableParticipants_Yes">
                        Yes
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input asp-for="IsRecruitingIdentifiableParticipants" class="govuk-radios__input" id="IsRecruitingIdentifiableParticipants_No" value="false" type="radio">
                    <label class="govuk-label govuk-radios__label" for="IsRecruitingIdentifiableParticipants_No">
                        No
                    </label>
                </div>
            </div>
        </fieldset>
    </div>
}

<div class="govuk-form-group @(Html.ViewData.ModelState["CpmsId"]?.Errors.Count > 0 ? "govuk-form-group--error" : "")">
    <label asp-for="CpmsId" class="govuk-label">
        @Html.DisplayNameFor(model => model.CpmsId) (optional)
    </label>
    @if (Html.ViewData.ModelState["CpmsId"]?.Errors.Count > 0)
    {
        <span id="cpms-id-error" class="govuk-error-message">
            <span class="govuk-visually-hidden">Error:</span>
            @Html.ValidationMessageFor(model => model.CpmsId)
        </span>
    }
    <input asp-for="CpmsId" class="govuk-input govuk-input--width-10 govuk-input @(Html.ViewData.ModelState["CpmsId"]?.Errors.Count > 0 ? "govuk-input--error" : "")" aria-describedby="@(Html.ViewData.ModelState["CpmsId"]?.Errors.Count > 0 ? "cpms-id-error" : "")"/>
</div>
