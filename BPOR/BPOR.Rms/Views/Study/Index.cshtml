@model BPOR.Rms.Models.Study.StudiesViewModel


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
        <h1 class="govuk-heading-xl">All Studies</h1>
    </div>
    <div class="govuk-grid-column-one-half">
        <div class="govuk-button-group">
            @Html.ActionLink("Add study", "Create", "Study", null, new { @id = "addStudyBtn", @class = "govuk-button", data_module = "govuk-button" })
            <button type="button" class="govuk-button govuk-button--inverse" data-module="govuk-button">
                Find volunteers
            </button>
        </div>
    </div>
</div>

@await Html.PartialAsync("Partials/Index/_StudySearchForm", Model)
@await Html.PartialAsync("Partials/Index/_StudyList", Model)
@await Html.PartialAsync("Partials/Index/_Pagination", Model)






