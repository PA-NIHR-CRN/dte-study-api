@model BPOR.Rms.Models.Study.StudyFormViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData.AddBreadcrumbs(new Dictionary<string, string>
            {
                ["All Studies"] = "/Study/Index",
                ["Study Page"] = $"/Study/Details/{Model.Id}",
                ["Edit Study"] = "/Study/Edit",
            });
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">

        <h1 class="govuk-heading-xl">Edit study details</h1>
        <partial name="Partials/_ErrorSummary" />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Step" value="@Model.Step" />

            <div style="@(Model.Step == 1 ? "" : "display:none;")">
                <partial name="Partials/Shared/_Step1FormFields" />
            </div>

            <div style="@(Model.Step == 2 ? "" : "display:none;")">
                <partial name="Partials/Shared/_Step2FormFields" />
            </div>
            <div class="govuk-button-group">
                <button type="submit" class="govuk-button" data_module="govuk-button">Update</button>
                @Html.ActionLink("Cancel", "Details", "Study", new { id = Model.Id }, new { data_module = "govuk-button" })
            </div>
        </form>
    </div>
</div>
