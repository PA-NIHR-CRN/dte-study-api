@{
    ViewData["Title"] = "Registry Management System - Home";
    var signedOut = !(User?.Identity?.IsAuthenticated ?? false) && Context.Request.Query.ContainsKey("signed-out");
}

@if (signedOut)
{
    <div class="govuk-grid-row signed-out">
        <div class="govuk-grid-column-one-half">
            <div class="govuk-notification-banner govuk-notification-banner--success signed-out" role="alert" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
                <div class="govuk-notification-banner__header">
                    <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                        Success
                    </h2>
                </div>
                <div class="govuk-notification-banner__content">
                    <p class="govuk-notification-banner__heading">
                        You have been successfully signed out.
                    </p>
                </div>
            </div>
        </div>
    </div>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
        <img src="~/images/BPoR_NIHR_colour-RGB.svg" />
    </div>
</div>

<div class="govuk-grid-row govuk-!-margin-top-4">
    <div class="govuk-grid-column-one-half">
        <h2 class="govuk-heading-m">Welcome to the Be Part of Research <br /> Registry Management System</h2>
        <div class="govuk-body-m">There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected humour, or randomised words which don't look even slightly believable. If you are going to use a passage of Lorem Ipsum, you need to be sure there isn't anything embarrassing hidden in the middle of text.</div>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
        <a href="?sign-in" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
            Sign in with your NIHR account
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
            </svg>
        </a>
    </div>
</div>