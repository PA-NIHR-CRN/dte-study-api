@{
    ViewData["Title"] = "Welcome to the Be Part of Research volunteer registry - Be Part of Research";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var signedOut = !(User?.Identity?.IsAuthenticated ?? false) && Context.Request.Query.ContainsKey("signed-out");
}

@if (signedOut)
{
    <div class="govuk-grid-row signed-out">
        <div class="govuk-grid-column-one-half">
            <div class="govuk-notification-banner govuk-notification-banner--success signed-out govuk-!-margin-bottom-0" role="alert" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
                <div class="govuk-notification-banner__header">
                    <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                        Success
                    </h2>
                </div>
                <div class="govuk-notification-banner__content">
                    <p class="govuk-notification-banner__heading">
                        You are now signed out of the Be Part of Research Registry Management System
                    </p>
                </div>
            </div>
        </div>
    </div>
}

<div class="govuk-grid-row govuk-!-margin-bottom-5">
    <div class="govuk-grid-column-one-half">
        <h1 class="govuk-heading-xl">Welcome to the Be Part of Research volunteer registry</h1>
        
        <p class="govuk-body">This service gives researchers and sponsors free access to our UK wide registry of research-engaged volunteers.</p>
        <p class="govuk-body">Our service supports all types of health and care research studies and all specialties and conditions.</p>
        <p class="govuk-body">Our system enables you to identify volunteers for your study through a wide range of data including age, ethnic group, sex, location and condition.</p>
        <p class="govuk-body">To gain access to our registry of volunteers, you need to create an NIHR account and provide a few details about you and your study. You may already have an NIHR account if you have previously used another NIHR service (for example, Sponsor Engagement, NIHR Learn, or CPMS).</p>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
        <a href="?sign-in" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
            Sign in
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
            </svg>
        </a>
    </div>
</div>