@model BPOR.Rms.Models.Filter.PostcodeSearchModel

<h2 class="govuk-heading-l">Location</h2>

<form-group for="PostcodeDistricts">
    <input asp-for="PostcodeDistricts" class="govuk-input" type="text" />
</form-group>

<h3 class="govuk-heading-m">OR</h3>

<form-group for="PostcodeRadiusSearch.FullPostcode">
    <input asp-for="PostcodeRadiusSearch.FullPostcode" class="govuk-input govuk-input--width-10" type="text" />
</form-group>

<form-group for="PostcodeRadiusSearch.SearchRadiusMiles">
    <div class="govuk-input__wrapper">
        <input asp-for="PostcodeRadiusSearch.SearchRadiusMiles" class="govuk-input govuk-input--width-5" type="text" inputmode="numeric" />
        <div class="govuk-input__suffix" aria-hidden="true">Miles</div>
    </div>
</form-group>

