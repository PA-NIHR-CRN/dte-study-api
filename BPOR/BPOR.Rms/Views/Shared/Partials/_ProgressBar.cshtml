@if (ViewData["Step"] is not null && ViewData["TotalSteps"] is not null && !(ViewData["Step"].Equals(ViewData["TotalSteps"]) && (int?) ViewData["Step"] > 2))
    {
        var step = ViewData["Step"] as int?;
        var totalSteps = ViewData["TotalSteps"] as int?;

    <style>
        .progress-bar-container {
            width: 100%;
            background-color: #DAEEE2;
        }

        .progress-bar {
            background-color: #46A86C;
            height: 10px;
            width: 0%;
        }
    </style>

    <div class="progress-bar-container" aria-labelledby="form-progress">
        <div id="form-progress" class="progress-bar" style="width: @(totalSteps>0 ? (step/ (double)totalSteps) * 100d : 0)%;"></div>
    </div>
}