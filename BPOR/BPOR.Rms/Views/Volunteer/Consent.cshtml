@model BPOR.Rms.Models.Volunteer.VolunteerContactConsentViewModel

@{
    ViewData["Title"] = "Consent - Volunteer Registry - Be Part of Research";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData.ShowBackLink();
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds govuk-grid-column-one-half-from-desktop">
        <h1 class="govuk-heading-l">Consent to process your data and be contacted by Be Part of Research</h1>

        @* <p class="govuk-body">{Guidance text}</p> *@

    </div>
</div>

@using (Html.BeginForm(FormMethod.Post))
{
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <div class="govuk-form-group @(Html.ViewData.ModelState["AgreedToContactConsent"]?.Errors.Count > 0 ? "govuk-form-group--error" : "")">
                <fieldset class="govuk-fieldset">
                    <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                        <div class="govuk-checkboxes__item">
                            <input asp-for="AgreedToContactConsent" class="govuk-checkboxes__input" id="AgreedToContactConsent" type="checkbox" />
                            <label class="govuk-label govuk-checkboxes__label" for="AgreedToContactConsent">
                                I confirm that I have read and understood the <a href="https://bepartofresearch.nihr.ac.uk/site-policies/privacy-policy/" target="_blank" aria-label="Privacy policy (Opens in a new tab)">Be Part of Research Privacy Policy</a>.
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>

    <div class="govuk-button-group">
         <button type="submit" class="govuk-button">
             Yes, I consent and wish to register now
         </button>
         <a asp-action="Index" asp-controller="Study" class="govuk-button govuk-button--secondary" data_module="govuk-button--secondary">
             Cancel
         </a>
    </div>
}